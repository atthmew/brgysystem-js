<%- include('../../../layouts/header') %>

<body>
	<!-- SIDEBAR -->
	<section id="sidebar" class="hide">
		<a href="#" class="brand">
			<img src="/img/logo.png" class="brand brand-img" alt="" />
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="/">
					<i class="bx bxs-dashboard"></i>
					<span class="text">Dashboard</span>
				</a>
			</li>

			<li>
				<a href="/citizens_record">
					<i class="bx bxs-group"></i>
					<span class="text">Citizens' Records</span>
				</a>
			</li>
			<li>
				<a href="/view_report">
					<i class="bx bxs-error-alt"></i>
					<span class="text">Reports</span>
				</a>
			</li>
			<li>
				<a href="/borrower_record">
					<i class="bx bxs-package"></i>
					<span class="text">Borrowers' Records</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<!-- <li>
				<a href="#">
					<i class="bx bxs-cog"></i>
					<span class="text">Settings</span>
				</a>
			</li> -->
			<li>
				<a href="/logout" class="logout">
					<i class="bx bxs-log-out-circle"></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->

	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class="bx bx-menu"></i>
			<a href="#" class="nav-link hidden">Categories</a>
			<form action="#" class="hidden">
				<div class="form-input">
					<input type="search" name="search" placeholder="Search..." />
					<button type="submit" class="search-btn"><i class="bx bx-search"></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden />
			<label for="switch-mode" class="switch-mode"></label>
			<!-- <a href="#" class="notification">
				<i class="bx bxs-bell"></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png" />
			</a> -->
		</nav>
		<!-- NAVBAR -->
		<% if (message) { %>
		<script>
			Swal.fire({
				title: '<%= message.titleMessage %>',
				text: '<%= message.message %>',
				icon: '<%= message.type %>',
				confirmButtonText: 'OK',
			});
		</script>
		<% } %>
		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Blotters' Report</h1>
					<ul class="breadcrumb">
						<li>
							<a href="/">Dashboard</a>
						</li>
						<li><i class="bx bx-chevron-right"></i></li>
						<li>
							<a href="/">Home</a>
						</li>
						<li><i class="bx bx-chevron-right"></i></li>
						<li>
							<a class="active" href="/records_material">Material Records</a>
						</li>
					</ul>
				</div>
				<form action="/records_blotter/download" class="download-pdf" method="post">
					<button type="submit" class="add-button import-csv-button-pop">
						<i class="bx bxs-cloud-download"></i>
						<span class="text">Download Report</span>
					</button>
				</form>
			</div>

			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Records</h3>
						<form action="#">
							<div class="form-input">
								<input type="search" name="search" id="search" placeholder="Search..." />
								<button type="submit" class="search-btn"><i class="bx bx-search"></i></button>
							</div>
						</form>
					</div>
					<% if (blotterRecord != '') { %>
					<table id="myTable">
						<thead>
							<tr>
								<th>Name</th>
								<th>Date of Incident</th>
								<th>Date of Complain</th>
								<th>Address</th>
								<th>Violation</th>
								<th>Name of Complainant</th>
							</tr>
						</thead>
						<tbody>
							<% blotterRecord.forEach((row, index)=> { %>
							<tr>
								<td>
									<img src="/img/profilePics/<%=row.img %>" />
									<p><%= row.blotterReportName %></p>
								</td>
								<td><%= row.blotterReportDate %></td>
								<td><%= row.blotterReportDateOfIncident %></td>
								<td><%= row.blotterReportAddress %></td>
								<td><%= row.blotterReportTypeOfIncident %></td>
								<td><%= row.blotterReportComplainant %></td>
							</tr>
							<% }) %> <% } else {%>
							<div class="no-user-message">
								<h1>No Blotter Record found in the database!</h1>
							</div>
							<% } %>
						</tbody>
					</table>
				</div>
			</div>
		</main>
	</section>
	<script src="scripts/script.js"></script>
	<script src="scripts/addUser.js"></script>
	<script src="scripts/addManyUser.js"></script>
</body>
<%- include('../../../layouts/footer') %>
