			<!-- <a href="#" class="notification">
				<i class="bx bxs-bell"></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="/img/people.png" />
			</a> -->
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Citizens' Records</h1>
					<ul class="breadcrumb">
						<li>
							<a href="/citizens_record">Citizens' Records</a>
						</li>
						<li><i class="bx bx-chevron-right"></i></li>
						<li>
							<a href="/citizens_record">Home</a>
						</li>
						<li><i class="bx bx-chevron-right"></i></li>
						<li>
							<a class="active" href="#">Certificates</a>
						</li>
					</ul>
				</div>
			</div>

			<div class="cert-container">
				<div class="cert-card brgy-cert">
					<h1 class="cert-title">Barangay Certificate</h1>
					<p class="cert-desc">
						Click the button to generate the file that is needed for the Barangay Certificate. It is a document that is
						ready to print, all the needed information is already inside the file.
					</p>
					<div class="cert-form">
						<form action="/brgy-cert/<%= user.id %>" method="post">
							<input class="add-button cert-btn" type="submit" value="Generate Barangay Certificate" />
						</form>
					</div>
				</div>

				<div class="cert-card brgy-oath">
					<h1 class="cert-title">Oath of Undertaking</h1>
					<p class="cert-desc">
						Click the button to generate the file that is needed for the Oath of Undertaking certificate. It is a
						document that is ready to print, all the needed information is already inside the file.
					</p>
					<div class="cert-form">
						<form action="/oath/<%= user.id %>" method="post">
							<input class="add-button cert-btn" type="submit" value="Generate Oath of Undertaking" />
						</form>
					</div>
				</div>

				<div class="cert-card brgy-job">
					<h1 class="cert-title">Job Certificate</h1>
					<p class="cert-desc">
						Click the button to generate the file that is needed for the Job Certificate. It is a document that is ready
						to print, all the needed information is already inside the file.
					</p>
					<div class="cert-form">
						<form action="/job-cert/<%= user.id %>" method="post">
							<input class="add-button cert-btn" type="submit" value="Generate Job Certificate" />
						</form>
					</div>
				</div>

				<div class="bot-part-cont">
					<div class="cert-card brgy-clear">
						<h1 class="cert-title">Barangay Clearance</h1>
						<p class="cert-desc">
							Click the button to generate the file that is needed for the Barangay Clearance. It is a document that is
							ready to print, all the needed information is already inside the file.
						</p>
						<div class="cert-form">
							<form action="/brgy-clearance/<%= user.id %>" method="post">
								<input class="add-button cert-btn" type="submit" value="Generate Barangay Clearance" />
							</form>
						</div>
					</div>

					<div class="cert-card brgy-indi">
						<h1 class="cert-title">Certificate of Indigency</h1>
						<p class="cert-desc">
							Click the button to generate the file that is needed for the Certificate of Indigency. It is a document
							that is ready to print, all the needed information is already inside the file.
						</p>
						<div class="cert-form">
							<button class="add-button popup-indigency">Certificate of Indigency</button>
						</div>
					</div>
				</div>
			</div>
			<!-- pop up modal -->
			<div class="flex-container">
				<div class="cert-indigency-popup hidden">
					<br />
					<i class="bx bx-x icon close-modal close-indigency"></i>

					<!-- NOTE: MAKE THIS A POP UP, IT NEEDS INPUT FOR PURPOSE -->
					<form action="/cert-indigency/<%= user.id %>" method="post">
						<input
							type="text"
							class="indigency-input"
							name="purpose"
							placeholder="Enter your purpose here..."
							autocomplete="no"
						/>
						<input class="add-button cert-btn" type="submit" value="Generate Certificate of Indigency" />
					</form>
				</div>
			</div>
			<div class="overlay hidden cert-indigency-overlay"></div>
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
	<script>
		const allSideMenu = document.querySelectorAll('#sidebar .side-menu.top li a');

		allSideMenu.forEach((item) => {
			const li = item.parentElement;

			item.addEventListener('click', function () {
				allSideMenu.forEach((i) => {
					i.parentElement.classList.remove('active');
				});
				li.classList.add('active');
			});
		});

		// TOGGLE SIDEBAR
		const menuBar = document.querySelector('#content nav .bx.bx-menu');
		const sidebar = document.getElementById('sidebar');

		menuBar.addEventListener('click', function () {
			sidebar.classList.toggle('hide');
		});

		const searchButton = document.querySelector('#content nav form .form-input button');
		const searchButtonIcon = document.querySelector('#content nav form .form-input button .bx');
		const searchForm = document.querySelector('#content nav form');

		searchButton.addEventListener('click', function (e) {
			if (window.innerWidth < 576) {
				e.preventDefault();
				searchForm.classList.toggle('show');
				if (searchForm.classList.contains('show')) {
					searchButtonIcon.classList.replace('bx-search', 'bx-x');
				} else {
					searchButtonIcon.classList.replace('bx-x', 'bx-search');
				}
			}
		});

		const mainSearchButton = document.querySelector('#content main form .form-input button');
		const mainSearchButtonIcon = document.querySelector('#content main form .form-input button .bx');
		const mainSearchForm = document.querySelector('#content main form');

		mainSearchButton.addEventListener('click', function (e) {
			if (window.innerWidth < 576) {
				e.preventDefault();
				mainSearchForm.classList.toggle('show');
				if (mainSearchForm.classList.contains('show')) {
					mainSearchButtonIcon.classList.replace('bx-search', 'bx-x');
				} else {
					mainSearchButtonIcon.classList.replace('bx-x', 'bx-search');
				}
			}
		});

		if (window.innerWidth < 768) {
			sidebar.classList.add('hide');
		} else if (window.innerWidth > 576) {
			searchButtonIcon.classList.replace('bx-x', 'bx-search');
			searchForm.classList.remove('show');
		}

		window.addEventListener('resize', function () {
			if (this.innerWidth > 576) {
				searchButtonIcon.classList.replace('bx-x', 'bx-search');
				searchForm.classList.remove('show');
			}
		});

		const switchMode = document.getElementById('switch-mode');

		switchMode.addEventListener('change', function () {
			if (this.checked) {
				document.body.classList.add('dark');
			} else {
				document.body.classList.remove('dark');
			}
		});

		// $(document).ready(function () {
		// 	$('table').DataTable({
		// 		order: [1, 'asc'],
		// 		searching: true,
		// 		sorting: true,
		// 		paging: true,
		// 		pageLength: 10, // Show 10 rows per page

		// 		language: {
		// 			searchPlaceholder: '',
		// 			paginate: {
		// 				first: '<<',
		// 				last: '>>',
		// 				previous: '<',
		// 				next: '>',
		// 			},
		// 		},
		// 	});
		// });

		// Get the DataTable instance
		var table = $('table').DataTable({
			language: {
				searchPlaceholder: '',
				paginate: {
					first: '<<',
					last: '>>',
					previous: '<',
					next: '>',
				},
			},
		});

		// Add event listener to the search input field
		$('#search').on('keyup', function () {
			// Perform search on the DataTable
			table.search(this.value).draw();
		});
	</script>

	<!-- pop up indigency -->
	<script>
		const certOfIndigencyOverlay = document.querySelector('.cert-indigency-overlay');
		const certOfIndigencyContainer = document.querySelector('.cert-indigency-popup');
		const certOfIndigencyBtn = document.querySelector('.popup-indigency');
		const certOfIndigencyCloseBtn = document.querySelector('.close-indigency');

		certOfIndigencyBtn.addEventListener('click', (e) => {
			e.preventDefault();
			certOfIndigencyContainer.classList.toggle('hidden');
			certOfIndigencyOverlay.classList.toggle('hidden');
		});
		certOfIndigencyOverlay.addEventListener('click', (e) => {
			e.preventDefault();
			certOfIndigencyContainer.classList.toggle('hidden');
			certOfIndigencyOverlay.classList.toggle('hidden');
		});
		certOfIndigencyCloseBtn.addEventListener('click', (e) => {
			e.preventDefault();
			certOfIndigencyContainer.classList.toggle('hidden');
			certOfIndigencyOverlay.classList.toggle('hidden');
		});
	</script>
</body>
