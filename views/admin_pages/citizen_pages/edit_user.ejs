<%- include('../../layouts/header') %>

<body>
	<!-- SIDEBAR -->
	<section id="sidebar" class="hide">
		<a href="#" class="brand">
			<img src="/img/logo.png" class="brand brand-img" alt="" />
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li>
				<a href="/">
					<i class="bx bxs-dashboard"></i>
					<span class="text">Dashboard</span>
				</a>
			</li>

			<li class="active">
				<a href="/citizens_record">
					<i class="bx bxs-group"></i>
					<span class="text">Citizens' Records</span>
				</a>
			</li>
			<li>
				<a href="/view_report">
					<i class="bx bxs-error-alt"></i>
					<span class="text">Reports</span>
				</a>
			</li>
			<li>
				<a href="/borrower_record">
					<i class="bx bxs-package"></i>
					<span class="text">Borrowers' Records</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<!-- <li>
				<a href="#">
					<i class="bx bxs-cog"></i>
					<span class="text">Settings</span>
				</a>
			</li> -->
			<li>
				<a href="/logout" class="logout">
					<i class="bx bxs-log-out-circle"></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->

	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class="bx bx-menu"></i>
			<a href="#" class="nav-link hidden">Categories</a>
			<form action="#" class="hidden">
				<div class="form-input">
					<input type="search" name="search" placeholder="Search..." />
					<button type="submit" class="search-btn"><i class="bx bx-search"></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden />
			<label for="switch-mode" class="switch-mode"></label>
			<!-- <a href="#" class="notification">
				<i class="bx bxs-bell"></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="/img/people.png" />
			</a> -->
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Citizens' Records</h1>
					<ul class="breadcrumb">
						<li>
							<a href="/citizens_record">Citizens' Records</a>
						</li>
						<li><i class="bx bx-chevron-right"></i></li>
						<li>
							<a href="/citizens_record">Home</a>
						</li>
						<li><i class="bx bx-chevron-right"></i></li>
						<li>
							<a class="active" href="#">Edit User</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="flex-container">
				<div class="container edit-container">
					<div class="title">Edit <%= user.name %>'s information</div>
					<div class="content">
						<form action="/update/<%= user._id %>" method="post" id="add-form" class="add-user-form">
							<div class="user-details">
								<div class="input-box">
									<span class="details">Full Name</span>
									<input type="text" name="name" placeholder="<%= user.name %>" />
								</div>
								<div class="input-box">
									<span class="details">Address</span>
									<input type="text" name="address" placeholder="<%= user.address %>" />
								</div>
								<div class="input-box">
									<span class="details">Age</span>
									<input type="age" name="age" placeholder="<%= user.age %>" />
								</div>
								<div class="input-box">
									<span class="details">Phone Number</span>
									<input type="tel" name="phone" placeholder="<%= user.phone %>" />
								</div>

								<div class="input-box">
									<span class="details">Occupation</span>
									<input type="text" name="occupation" placeholder="<%= user.occupation %>" />
								</div>
								<div class="input-box">
									<span class="details">Birthday</span>
									<input type="date" name="birthday" placeholder="<%= user.birthday %>" />
								</div>

								<div class="input-box">
									<span class="details">Mother's Name</span>
									<input type="text" name="motherName" placeholder="<%= user.motherName %>" />
								</div>
								<div class="input-box">
									<span class="details">Mother's Age</span>
									<input type="age" name="motherAge" placeholder="<%= user.motherAge %>" />
								</div>
								<div class="input-box">
									<span class="details">Mother's Occupation</span>
									<input type="text" name="motherOccupation" placeholder="<%= user.motherOccupation %>" />
								</div>

								<div class="input-box">
									<span class="details">Father's Name</span>
									<input type="text" name="fatherName" placeholder="<%= user.fatherName %>" />
								</div>
								<div class="input-box">
									<span class="details">Father's Age</span>
									<input type="age" name="fatherAge" placeholder="<%= user.fatherAge %>" />
								</div>
								<div class="input-box">
									<span class="details">Father's Occupation</span>
									<input type="text" name="fatherOccupation" placeholder="<%= user.fatherOccupation %>" />
								</div>
							</div>
							<div class="registered-details">
								<input type="radio" name="civilStatus" value="Single" id="dot-1" required />
								<input type="radio" name="civilStatus" value="Engaged" id="dot-2" />
								<input type="radio" name="civilStatus" value="Married" id="dot-3" />
								<span class="registered-title">Civil Status (this is required.)</span>
								<div class="category">
									<label for="dot-1">
										<span class="dot one"></span>
										<span class="registered">Single</span>
									</label>
									<label for="dot-2">
										<span class="dot two"></span>
										<span class="registered">Engaged</span>
									</label>
									<label for="dot-3">
										<span class="dot three"></span>
										<span class="registered">Married</span>
									</label>
								</div>
							</div>
							<div class="button">
								<input type="submit" name="submit" value="Update" />
							</div>
						</form>
					</div>
				</div>
			</div>
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
	<script>
		const allSideMenu = document.querySelectorAll('#sidebar .side-menu.top li a');

		allSideMenu.forEach((item) => {
			const li = item.parentElement;

			item.addEventListener('click', function () {
				allSideMenu.forEach((i) => {
					i.parentElement.classList.remove('active');
				});
				li.classList.add('active');
			});
		});

		// TOGGLE SIDEBAR
		const menuBar = document.querySelector('#content nav .bx.bx-menu');
		const sidebar = document.getElementById('sidebar');

		menuBar.addEventListener('click', function () {
			sidebar.classList.toggle('hide');
		});

		const searchButton = document.querySelector('#content nav form .form-input button');
		const searchButtonIcon = document.querySelector('#content nav form .form-input button .bx');
		const searchForm = document.querySelector('#content nav form');

		searchButton.addEventListener('click', function (e) {
			if (window.innerWidth < 576) {
				e.preventDefault();
				searchForm.classList.toggle('show');
				if (searchForm.classList.contains('show')) {
					searchButtonIcon.classList.replace('bx-search', 'bx-x');
				} else {
					searchButtonIcon.classList.replace('bx-x', 'bx-search');
				}
			}
		});

		const mainSearchButton = document.querySelector('#content main form .form-input button');
		const mainSearchButtonIcon = document.querySelector('#content main form .form-input button .bx');
		const mainSearchForm = document.querySelector('#content main form');

		mainSearchButton.addEventListener('click', function (e) {
			if (window.innerWidth < 576) {
				e.preventDefault();
				mainSearchForm.classList.toggle('show');
				if (mainSearchForm.classList.contains('show')) {
					mainSearchButtonIcon.classList.replace('bx-search', 'bx-x');
				} else {
					mainSearchButtonIcon.classList.replace('bx-x', 'bx-search');
				}
			}
		});

		if (window.innerWidth < 768) {
			sidebar.classList.add('hide');
		} else if (window.innerWidth > 576) {
			searchButtonIcon.classList.replace('bx-x', 'bx-search');
			searchForm.classList.remove('show');
		}

		window.addEventListener('resize', function () {
			if (this.innerWidth > 576) {
				searchButtonIcon.classList.replace('bx-x', 'bx-search');
				searchForm.classList.remove('show');
			}
		});

		const switchMode = document.getElementById('switch-mode');

		switchMode.addEventListener('change', function () {
			if (this.checked) {
				document.body.classList.add('dark');
			} else {
				document.body.classList.remove('dark');
			}
		});

		// $(document).ready(function () {
		// 	$('table').DataTable({
		// 		order: [1, 'asc'],
		// 		searching: true,
		// 		sorting: true,
		// 		paging: true,
		// 		pageLength: 10, // Show 10 rows per page

		// 		language: {
		// 			searchPlaceholder: '',
		// 			paginate: {
		// 				first: '<<',
		// 				last: '>>',
		// 				previous: '<',
		// 				next: '>',
		// 			},
		// 		},
		// 	});
		// });

		// Get the DataTable instance
		var table = $('table').DataTable({
			language: {
				searchPlaceholder: '',
				paginate: {
					first: '<<',
					last: '>>',
					previous: '<',
					next: '>',
				},
			},
		});

		// Add event listener to the search input field
		$('#search').on('keyup', function () {
			// Perform search on the DataTable
			table.search(this.value).draw();
		});
	</script>
	<script src="scripts/script.js"></script>
</body>
<%- include('../../layouts/footer') %>
