	}

	/* Options */
	.edit {
		color: #4ade80;
	}
	.delete {
		color: #ef4444;
	}
	.more {
		color: #0ea5e9;
	}

	/* Modals */
	.overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5);
		z-index: 100;
	}

	.hidden {
		visibility: hidden;
		opacity: 0;
	}

